 <section>
    <div class="container">
        <div class="row mt-5">
        </div>
        <table class="table mt-5" style="text-align: center;">
  <thead>
    <tr>
        <th scope="col">Date</th>
      <th >Address</th>
      <th >Pincode</th>
      <th >Mobile</th>
      <th>Image</th>
      <th scope="col">Amount</th>
      <th scope="col">Payment</th>
      <th>Status</th>
      <th>Edit</th>
      
    </tr>
  </thead>
  <tbody>
      {{#each orders}}
    <tr>
      <td style="width:250px;">{{this.date}}</td>
      <td style="width:250px;">{{this.deliveryDetails.address}}</td>
      <td>{{this.deliveryDetails.pincode}}</td>
      <td>{{this.deliveryDetails.mobile}}</td>
      {{#each this.products}}
        <td><img style="width: 50px; height:50px;" src="/product-images/{{this.item}}.jpg" alt=""></td>
      {{/each}}
      <td>{{this.totalAmount}}</td>
      <td>{{this.paymentMethod}}</td>
      <td>{{this.status}}</td>
      <td>
        <a href="/view-order-products/{{this._id}}" class="btn btn-primary" >View Order Products</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>