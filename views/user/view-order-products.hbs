
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3">
                    <div class="card" style="width:16rem; height:25rem;">
                         <img src="/product-images/{{this.product._id}}.jpg" alt="">
                        <div class="card-body">
                            <h5 class="card-title">{{this.product.Name}}</h5>
                            <p class="card-title">Rs.{{this.product.Price}}</p>
                            <p class="card-title">Quantity:{{this.quantity}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
